{
  "name": "@cere/ddc-onboarding-cli",
  "description": "Cerebellum Network DDC onboard tool",
  "version": "0.0.2",
  "repository": "git@github.com:Cerebellum-Network/ddc_onboarding_cli.git",
  "author": "Alejandro <abergasov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npx tsc -p .",
    "package": "rm -f bin/ddc_* && pkg . --output bin/ddc_onboarding_cli",
    "release": "npm run build && npm run package",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build",
    "start": "ts-node-dev src/index.ts",
    "publish:npm": "npm publish --access public"
  },
  "main": "dist/index.js",
  "bin": {
    "ddc_onboarding_cli": "./dist/index.js"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf"
    ],
    "targets": [
      "node16-linux-arm64",
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-macos-arm64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "clear": "^0.1.0",
    "commander": "^9.4.1",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.5",
    "kleur": "^4.1.5",
    "@polkadot/types": "^9.10.1",
    "@polkadot/keyring": "^10.2.1",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.11",
    "@types/figlet": "^1.5.5",
    "@types/fs-extra": "^9.0.13",
    "typescript": "^4.9.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "ts-node-dev": "^2.0.0",
    "pkg": "^5.8.0"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "quoteProps": "as-needed",
    "arrowParens": "always"
  }
}