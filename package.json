{
	"name": "@cere/ddc-onboarding-cli",
	"description": "Cerebellum Network DDC onboard tool",
	"version": "0.0.2",
	"repository": "git@github.com:Cerebellum-Network/ddc_onboarding_cli.git",
	"author": "Alejandro <abergasov@gmail.com>",
	"license": "MIT",
	"scripts": {
		"build": "npx tsc -p .",
		"package": "rm -f bin/ddc_* && pkg . --output bin/ddc_onboarding_cli",
		"release": "npm run build && npm run package",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepublishOnly": "npm run build",
		"start": "ts-node-dev src/index.ts",
		"publish:npm": "npm publish --access public",
		"format": "yarn prettier --write ."
	},
	"main": "dist/index.js",
	"bin": {
		"ddc_onboarding_cli": "./dist/index.js"
	},
	"pkg": {
		"scripts": "dist/**/*.js",
		"assets": [
			"node_modules/figlet/fonts/Standard.flf"
		],
		"targets": [
			"node16-linux-arm64",
			"node16-linux-x64",
			"node16-macos-x64",
			"node16-macos-arm64"
		],
		"outputPath": "dist"
	},
	"dependencies": {
		"@polkadot/keyring": "^10.2.1",
		"@polkadot/types": "^9.10.1",
		"@polkadot/util": "^10.2.1",
		"@polkadot/wasm-crypto": "^6.4.1",
		"clear": "^0.1.0",
		"commander": "^9.4.1",
		"figlet": "^1.5.2",
		"fs-extra": "^11.1.0",
		"inquirer": "^8.2.5",
		"kleur": "^4.1.5",
		"node-fetch": "^2.6.7",
		"prettier": "^2.8.1",
		"write-yaml-file": "^4.2.0"
	},
	"devDependencies": {
		"@types/figlet": "^1.5.5",
		"@types/fs-extra": "^9.0.13",
		"@types/inquirer": "^9.0.3",
		"@types/node": "^18.11.11",
		"@types/node-fetch": "^2.6.2",
		"pkg": "^5.8.0",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typedoc": "^0.23.21",
		"typescript": "^4.9.4"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"printWidth": 120,
		"trailingComma": "all",
		"bracketSpacing": true,
		"quoteProps": "as-needed",
		"arrowParens": "always"
	}
}
