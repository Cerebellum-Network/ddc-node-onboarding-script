{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		//"resolveJsonModule": false,
		"importHelpers": true,
		"removeComments": true
	},
	"exclude": ["node_modules", "dist", "templates"]
}
